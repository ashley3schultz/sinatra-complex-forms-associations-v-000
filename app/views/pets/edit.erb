<h1>Update Pet</h1>
<form action="/pets/<%=@pet.id%>" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">

  <br></br>

  <label>Choose an existing owner:</label>

  <br></br>

  <input type="radio" name="pet[owner_id]" id="<%=@pet.owner.id%>" value="<%=@pet.owner.id%>" <%='checked' if @pet.owner.include?(@pet.owner) %>><%=owner.name%></input>



  <br></br>

    <label>or, create a new owner:</label>
    <br></br>
    <label>name:</label>
      <input  type="text" name="owner_name"></input>
    <br></br>
  <input type="submit" value="Create Pet">
</form>
